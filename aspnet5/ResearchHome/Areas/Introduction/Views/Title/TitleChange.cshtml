@model ResearchHome.Areas.Introduction.Models.TitleChangesModel
@{
    ViewData["Title"] = "TitleChange";
    Layout = "/Views/Shared/_Master.cshtml";
    string oldTitle = Model != null ? Model.OldTitle : ViewBag.OldTitle;
    int titleChangeId = Model != null ? Model.Id : 0;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@section Heads{
    <link href="/css/layerMaster.css" rel="stylesheet" />
    <style>
        .layui-form-item .layui-inline {
            height: 60px;
            margin-bottom: 0;
        }

        .layui-form-item {
            margin-bottom: 6px;
            clear: both;
            height: 54px;
        }
    </style>
}

<div class="layui-form" style="margin-top: 20px;">
    <div class="layui-inline" style="margin-top: 20px;">
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px;padding: 9px 0px;">旧职位</label>
            <div class="layui-input-block">
                <input type="hidden" id="txtMemberId" value="@ViewBag.MemberId" />
                <input type="text" id="txtOldTitle" readonly value="@oldTitle" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>
        </div>
    </div>

    <div class="layui-inline">
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:100px;padding: 9px 0px;">新职位</label>
            <div class="layui-input-block">
                <input type="text" id="txtNewTitle" asp-for="NewTitle" onchange="onchangeEvent(this)" required lay-verify="required" placeholder="请输入新职位" autocomplete="off" class="layui-input">
                <div id="error_title" style="display: none">
                    <div class="valid-tips"><span class="valid-tips-span field-validation-error">请输入新职位</span></div>
                </div>
            </div>
        </div>

    </div>

    <div class="layui-form-item layui-content-btn" style="margin-bottom:13px;">
        <div class="layui-input-block">
            <button type="button" onclick="saveTitle('@titleChangeId')" class="layui-btn" data-ripple>保存</button>
            <button type="button" onclick="parent.layer.closeAll();" class="layui-btn layui-btn-primary">取消</button>
        </div>
    </div>
</div>


@section Scripts{
    <script src="/js/global.js"></script>
    <script src="~/js/introduction/MemberOperating/TitleChange.js"></script>
}

