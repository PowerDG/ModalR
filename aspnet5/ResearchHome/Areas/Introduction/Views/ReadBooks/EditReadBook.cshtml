@model ResearchHome.Areas.Book.Models.BookModel
@{
    ViewData["Title"] = "EditReadBook";
    Layout = "~/Views/Shared/_Master.cshtml";
    string photo = Model != null ? Model.Photo : "/images/public/NonePicture.png";
    string photoHD = Model != null && !string.IsNullOrEmpty(Model.PhotoHD) ? Model.PhotoHD : photo;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@section Heads{
    <link href="/css/layerMaster.css" rel="stylesheet" />
    <style>
        .layui-form-item .layui-inline {
            height: 60px;
            margin-bottom: 0;
        }

        .layui-form-item {
            margin-bottom: 6px;
            clear: both;
            height: 54px;
        }

        .icon-div {
            width: 22%;
            float: left;
            margin-top: 30px;
            margin-left: 25px;
        }

            .icon-div img {
                width: 100%;
                height: 100%;
                cursor: pointer;
            }

        .medal-div {
            margin-top: 30px;
            width: 70%;
            float: left;
            margin-left: 15px;
        }

        .layui-form-label {
            float: left;
            display: block;
            padding: 9px 15px 9px 0px;
            width: 50px;
            font-weight: 400;
            line-height: 20px;
            text-align: right;
        }

        .layui-input-block {
            margin-left: 70px;
            min-height: 36px;
        }

        .layui-row-icon {
            width: 130px;
            height: 130px;
            border: solid 0.1px;
            padding: 2px;
        }

        .layui-upload-image {
            max-width: 100%;
            max-height: 100%;
        }

    </style>
}
<div class="icon-div">
    <div class="layui-upload" style="text-align: center;">
        <div class="layui-row-icon">
            <canvas id="myCanvas" style="display:none;"></canvas>
            <img class="layui-upload-img layui-upload-image" title="点击预览高清图" onclick="previewPic(book.photoHD, parent.layer)"
                 onerror="javascript: this.src = '/images/public/NonePicture.png'" src="@photo" id="bookPhoto">
            <input type="hidden" name="isupload" value="0" />
            <input type="file" style="display:none;" id="ImgUpload" onchange="loadUploadImg()" />
        </div>
        <button type="button" style="margin-top:10px;" class="layui-btn" onclick="$('#ImgUpload').click();">上传图片</button><br />
        <div id="error_photo" style="display: none">
            <div class="valid-tips"><span class="valid-tips-span field-validation-error">请上传书籍封面</span></div>
        </div>
    </div>

</div>
<div class="layui-form medal-div">
    <div class="layui-inline" style="width: 90%;">
        <div class="layui-form-item">
            <label class="layui-form-label">书名</label>
            <div class="layui-input-block">
                <input type="hidden" id="txtBookId" asp-for="Id" />
                <input type="text" id="txtName" required lay-verify="required" onchange="onchangeEvent(this)" asp-for="Name" autocomplete="off" class="layui-input" placeholder="请输入书名" />
                <div id="error_name" style="display: none">
                    <div class="valid-tips"><span class="valid-tips-span field-validation-error">请输入书名</span></div>
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">作者</label>
            <div class="layui-input-block">
                <input type="text" id="txtAuthor" required lay-verify="required" onchange="onchangeEvent(this)" asp-for="Author" autocomplete="off" class="layui-input" placeholder="请输入作者" />
                <div id="error_author" style="display: none">
                    <div class="valid-tips"><span class="valid-tips-span field-validation-error">请输入作者</span></div>
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">描述</label>
            <div class="layui-input-block">
                <textarea id="txtDescription" rows="8" asp-for="LastComment" maxlength="200" placeholder="请输入描述" class="layui-textarea"></textarea>
            </div>
        </div>
    </div>
</div>

<div class="layui-content-btn">
    <div class="layui-input-block">
        <button class="layui-btn" lay-submit onclick="save2('@ViewBag.MemberId')">保存</button>
        <button type="reset" class="layui-btn layui-btn-primary" onclick="parent.layer.closeAll();">取消</button>
    </div>
</div>

@section Scripts{
<script src="~/js/global.js"></script>
<script src="~/js/introduction/MemberOperating/EditReadBook.js"></script>


    <script>
        var book;
        $(document).ready(function () { 
            book = { photoHD: '@photoHD' };
        });
    </script>
}
