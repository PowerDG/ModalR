@{
    Layout = "~/Views/Shared/_Master.cshtml";
}
<style>
    .layui-form-label {
        padding-left: 0px;
        width: 60px;
    }

    .layui-row {
        margin-top: 20px;
        margin-left: 30px;
    }

    .layui-input-block {
        margin-left: 80px;
    }
</style>

<div class="layui-row">
    <div class="layui-col-xs12">
        <form class="layui-form" action="/TaskScheduleBoard/TaskFeedback/TrackTaskFeedback" method="post" asp-antiforgery="true" autocomplete="off">
            <input type="hidden" name="taskId" value="@ViewBag.TaskId" />
            <div class="layui-form-item">
                <label class="layui-form-label">反馈类型</label>
                <div class="layui-input-block">
                    <input type="radio" name="type" value="1" title="亮点功能" checked>
                    <input type="radio" name="type" value="2" title="窝心功能">
                    <input type="radio" name="type" value="3" title="点赞">
                    <input type="radio" name="type" value="4" title="加油">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">反馈内容</label>
                <div class="layui-input-block">
                    <textarea name="description" placeholder="请输入反馈内容" class="layui-textarea" lay-verify="required" style="height:200px;width:380px;"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="float:right;margin-right:60px;">
                    <button class="layui-btn" lay-submit>提交</button>
                </div>
            </div>
        </form>
    </div>
</div>
